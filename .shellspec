--format documentation
--color
--warning-as-failure
--fail-low-coverage
--random none
--shell zsh

# Coverage options for kcov integration  
--kcov-options "--include-pattern="
--kcov-options "--include-path=./src"
--kcov-options "--exclude-pattern=/."
